{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MudListings_Dev;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Jwt": {
    "Secret": "ThisIsADevelopmentSecretKeyThatShouldBeAtLeast32CharactersLong!",
    "Issuer": "MudListings.Dev",
    "Audience": "MudListings.Dev",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://127.0.0.1:5173"
    ]
  },
  "MsspPolling": {
    "PollingIntervalMinutes": 5,
    "ConnectionTimeoutSeconds": 10,
    "MaxConcurrentPolls": 10,
    "MaxConsecutiveFailures": 3
  },
  "TrendingUpdate": {
    "IntervalMinutes": 60,
    "Enabled": true
  },
  "Hangfire": {
    "DashboardPath": "/hangfire"
  }
}
